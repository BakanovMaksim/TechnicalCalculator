<Window x:Class="TechnicalCalculator.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TechnicalCalculator.UI"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="500"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="FontSize" Value="70"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="HorizontalAlignment" Value="Right"/>
            <Setter Property="VerticalAlignment" Value="Bottom"/>
        </Style>
        <Style TargetType="Button">
            <Setter Property="FontSize" Value="45"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>
        <SolidColorBrush x:Key="buttonControl" Color="#0e2139"/>
        <SolidColorBrush x:Key="buttonDigit" Color="#072c63"/>
        <SolidColorBrush x:Key="buttonEnt" Color="#162e54"/>
    </Window.Resources>

    <Grid Background="Black">
        <Grid.RowDefinitions>
            <RowDefinition Height="150"/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <TextBlock x:Name="textBlockResult" Grid.Row="0" Text="0" Grid.Column="3"/>

        <Button Grid.Row="1" Grid.Column="2" Content="+/-" Background="{StaticResource buttonControl}"/>
        <Button Grid.Row="1" Grid.Column="0" Content="C" Click="buttonClear_Click" Background="{StaticResource buttonControl}"/>
        <Button Grid.Row="1" Grid.Column="1" Content="CE" Click="buttonClear_Click" Background="{StaticResource buttonControl}"/>

        <Button Grid.Row="2" Grid.Column="0" Content="7" Click="buttonNumber_Click" Background="{StaticResource buttonDigit}"/>
        <Button Grid.Row="2" Grid.Column="1" Content="8" Click="buttonNumber_Click" Background="{StaticResource buttonDigit}"/>
        <Button Grid.Row="2" Grid.Column="2" Content="9" Click="buttonNumber_Click" Background="{StaticResource buttonDigit}"/>
        <Button Grid.Row="3" Grid.Column="0" Content="4" Click="buttonNumber_Click" Background="{StaticResource buttonDigit}"/>
        <Button Grid.Row="3" Grid.Column="1" Content="5" Click="buttonNumber_Click" Background="{StaticResource buttonDigit}"/>
        <Button Grid.Row="3" Grid.Column="2" Content="6" Click="buttonNumber_Click" Background="{StaticResource buttonDigit}"/>
        <Button Grid.Row="4" Grid.Column="0" Content="1" Click="buttonNumber_Click" Background="{StaticResource buttonDigit}"/>
        <Button Grid.Row="4" Grid.Column="1" Content="2" Click="buttonNumber_Click" Background="{StaticResource buttonDigit}"/>
        <Button Grid.Row="4" Grid.Column="2" Content="3" Click="buttonNumber_Click" Background="{StaticResource buttonDigit}"/>
        <Button Grid.Row="5" Grid.Column="0" Content="0" Click="buttonNumber_Click" Background="{StaticResource buttonDigit}"/>

        <Button Grid.Row="5" Grid.Column="1" Content="." Background="{StaticResource buttonDigit}"/>
        <Button Grid.Row="1" Grid.Column="3" Content="%" Click="buttonNumber_Click" Background="{StaticResource buttonControl}"/>
        <Button Grid.Row="2" Grid.Column="3" Content="/" Click="buttonNumber_Click" Background="{StaticResource buttonControl}"/>
        <Button Grid.Row="3" Grid.Column="3" Content="*" Click="buttonNumber_Click" Background="{StaticResource buttonControl}"/>
        <Button Grid.Row="4" Grid.Column="4" Content="-" Click="buttonNumber_Click" Background="{StaticResource buttonControl}"/>
        <Button Grid.Row="5" Grid.Column="4" Content="+" Click="buttonNumber_Click" Background="{StaticResource buttonControl}"/>
        <Button x:Name="buttonEnter" Grid.Row="5" Grid.Column="2" Content="=" Background="{StaticResource buttonEnt}" Click="buttonEnter_Click"/>
    </Grid>
</Window>
