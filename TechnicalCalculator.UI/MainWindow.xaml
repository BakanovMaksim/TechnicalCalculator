<Window x:Class="TechnicalCalculator.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TechnicalCalculator.UI"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="500"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="FontSize" Value="70"/>
            <Setter Property="HorizontalAlignment" Value="Right"/>
            <Setter Property="VerticalAlignment" Value="Bottom"/>
        </Style>
        <Style TargetType="Button">
            <Setter Property="FontSize" Value="45"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="150"/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <TextBlock x:Name="textBlockResult" Grid.Row="0" Grid.ColumnSpan="4" Text="0"/>

        <Button Grid.Row="1" Grid.Column="0" Content="%"/>
        <Button Grid.Row="1" Grid.Column="1" Content="+/-"/>
        <Button Grid.Row="1" Grid.Column="2" Content="C"/>
        <Button Grid.Row="1" Grid.Column="3" Content="Clear"/>

        <Button Grid.Row="2" Grid.Column="0" Content="7" Click="buttonNumber_Click"/>
        <Button Grid.Row="2" Grid.Column="1" Content="8" Click="buttonNumber_Click"/>
        <Button Grid.Row="2" Grid.Column="2" Content="9" Click="buttonNumber_Click"/>
        <Button Grid.Row="3" Grid.Column="0" Content="4" Click="buttonNumber_Click"/>
        <Button Grid.Row="3" Grid.Column="1" Content="5" Click="buttonNumber_Click"/>
        <Button Grid.Row="3" Grid.Column="2" Content="6" Click="buttonNumber_Click"/>
        <Button Grid.Row="4" Grid.Column="0" Content="1" Click="buttonNumber_Click"/>
        <Button Grid.Row="4" Grid.Column="1" Content="2" Click="buttonNumber_Click"/>
        <Button Grid.Row="4" Grid.Column="2" Content="3" Click="buttonNumber_Click"/>
        <Button Grid.Row="5" Grid.Column="0" Content="0" Click="buttonNumber_Click"/>

        <Button Grid.Row="5" Grid.Column="1" Content="."/>
        <Button Grid.Row="2" Grid.Column="3" Content="/" Click="buttonNumber_Click"/>
        <Button Grid.Row="3" Grid.Column="3" Content="*" Click="buttonNumber_Click"/>
        <Button Grid.Row="4" Grid.Column="4" Content="-" Click="buttonNumber_Click"/>
        <Button Grid.Row="5" Grid.Column="4" Content="+" Click="buttonNumber_Click"/>
        <Button x:Name="buttonEnter" Grid.Row="5" Grid.Column="2" Content="=" Click="buttonEnter_Click"/>
    </Grid>
</Window>
