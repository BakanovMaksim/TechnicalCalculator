<Window x:Class="TechnicalCalculator.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TechnicalCalculator.UI"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="800"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <Style TargetType="TextBlock" x:Key="textBlockResultStyle">
            <Setter Property="FontSize" Value="55"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="HorizontalAlignment" Value="Right"/>
            <Setter Property="VerticalAlignment" Value="Bottom"/>
        </Style>
        <Style TargetType="TextBlock" x:Key="textBlockMemoryStyle">
            <Setter Property="FontSize" Value="30"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#0e2139"/>
        </Style>
        <Style TargetType="Button">
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>
        <SolidColorBrush x:Key="buttonControl" Color="#0e2139"/>
        <SolidColorBrush x:Key="buttonDigit" Color="#072c63"/>
        <SolidColorBrush x:Key="buttonEnt" Color="#162e54"/>
        <SolidColorBrush x:Key="buttonOperation" Color="#0e214f"/>
    </Window.Resources>

    <Grid Background="Black">
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Expander Grid.ColumnSpan="8" HorizontalAlignment="Center">
            <ToolBar>
                <Menu>
                    <MenuItem x:Name="menuItemEngineering" Header="Инженерный"/>
                </Menu>
            </ToolBar>
        </Expander>

        <TextBlock x:Name="textBlockResult" Grid.Row="0" Grid.ColumnSpan="8" Text="0" Style="{StaticResource textBlockResultStyle}"/>

        <Label Grid.Row="1" Grid.Column="3" Content="Memory" Foreground="White" FontSize="20" HorizontalAlignment="Center"/>
        <TextBlock x:Name="textBlockMemory" Grid.Row="1" Grid.Column="4" Grid.ColumnSpan="2" Style="{StaticResource textBlockMemoryStyle}"/>

        <Button Grid.Row="2" Grid.Column="5" Content="C" Click="buttonClear_Click" Background="{StaticResource buttonControl}"/>
        <Button x:Name="buttonAddMemory" Grid.Row="3" Grid.Column="5" Grid.RowSpan="2" Content="M+" Background="{StaticResource buttonControl}" Click="buttonAddMemory_Click"/>
        <Button x:Name="buttonSubMemory" Grid.Row="5" Grid.Column="5" Grid.RowSpan="2" Content="M-" Background="{StaticResource buttonControl}" Click="buttonSubMemory_Click"/>
        <Button x:Name="buttonSaveMemory" Grid.Row="2" Grid.Column="2" Content="MS" Background="{StaticResource buttonControl}" Click="buttonSaveMemory_Click"/>
        <Button x:Name="buttonEnterMemory" Grid.Row="2" Grid.Column="3" Content="MR" Background="{StaticResource buttonControl}" Click="buttonEnterMemory_Click"/>
        <Button x:Name="buttonClearMemory" Grid.Row="2" Grid.Column="4" Content="MC" Background="{StaticResource buttonControl}" Click="buttonClearMemory_Click"/>

        <TextBlock Grid.Row="2" Grid.ColumnSpan="2" Style="{StaticResource textBlockMemoryStyle}"/>

        <Button Grid.Row="3" Grid.Column="2" Grid.RowSpan="2" Content="7" Click="buttonNumber_Click" Background="{StaticResource buttonDigit}"/>
        <Button Grid.Row="3" Grid.Column="3" Grid.RowSpan="2" Content="8" Click="buttonNumber_Click" Background="{StaticResource buttonDigit}"/>
        <Button Grid.Row="3" Grid.Column="4" Grid.RowSpan="2" Content="9" Click="buttonNumber_Click" Background="{StaticResource buttonDigit}"/>
        <Button Grid.Row="5" Grid.Column="2" Grid.RowSpan="2" Content="4" Click="buttonNumber_Click" Background="{StaticResource buttonDigit}"/>
        <Button Grid.Row="5" Grid.Column="3" Grid.RowSpan="2" Content="5" Click="buttonNumber_Click" Background="{StaticResource buttonDigit}"/>
        <Button Grid.Row="5" Grid.Column="4" Grid.RowSpan="2" Content="6" Click="buttonNumber_Click" Background="{StaticResource buttonDigit}"/>
        <Button Grid.Row="7" Grid.Column="2" Grid.RowSpan="2" Content="1" Click="buttonNumber_Click" Background="{StaticResource buttonDigit}"/>
        <Button Grid.Row="7" Grid.Column="3" Grid.RowSpan="2" Content="2" Click="buttonNumber_Click" Background="{StaticResource buttonDigit}"/>
        <Button Grid.Row="7" Grid.Column="4" Grid.RowSpan="2" Content="3" Click="buttonNumber_Click" Background="{StaticResource buttonDigit}"/>
        <Button Grid.Row="9" Grid.Column="2" Grid.RowSpan="2" Content="0" Click="buttonNumber_Click" Background="{StaticResource buttonDigit}"/>
        <Button Grid.Row="9" Grid.Column="3" Grid.RowSpan="2" Content="00" Click="buttonNumber_Click" Background="{StaticResource buttonDigit}"/>

        <Button Grid.Row="9" Grid.Column="4" Grid.RowSpan="2" Content="." Click="buttonNumber_Click" Background="{StaticResource buttonDigit}"/>
        
        <Button Grid.Row="9" Grid.Column="1" Grid.RowSpan="2" Content="%" Click="buttonOperation_Click" Background="{StaticResource buttonOperation}"/>
        <Button Grid.Row="7" Grid.Column="1" Grid.RowSpan="2" Content="/" Click="buttonOperation_Click" Background="{StaticResource buttonOperation}"/>
        <Button Grid.Row="7" Grid.Column="0" Grid.RowSpan="2" Content="*" Click="buttonOperation_Click" Background="{StaticResource buttonOperation}"/>
        <Button Grid.Row="5" Grid.Column="1" Grid.RowSpan="2" Content="-" Click="buttonOperation_Click" Background="{StaticResource buttonOperation}"/>
        <Button Grid.Row="5" Grid.Column="0" Grid.RowSpan="2" Content="+" Click="buttonOperation_Click" Background="{StaticResource buttonOperation}"/>

        <Button Grid.Row="3" Grid.Column="0" Grid.RowSpan="2" Content="+/-" Background="{StaticResource buttonOperation}"/>
        <Button Grid.Row="3" Grid.Column="1" Grid.RowSpan="2" Content="xⁿ" Click="buttonExponentiation_Click" Background="{StaticResource buttonOperation}"/>
        <Button Grid.Row="9" Grid.Column="0" Grid.RowSpan="2" Content="X!" Click="buttonFactorial_Click" Background="{StaticResource buttonOperation}"/>

        <Button x:Name="buttonEnter" Grid.Row="7" Grid.Column="6" Grid.RowSpan="4" Content="=" Click="buttonEnter_Click" Background="{StaticResource buttonEnt}"/>
    </Grid>
</Window>
